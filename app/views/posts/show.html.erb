<script src="../../assets/javascript/votes.js"></script>   
<h1><%= @post.title %></h1>
<br>
<pre>
<code class="language-markup">
<p><%= @post.body %></p>
</code>
</pre>

<h3>Answers</h3>
<% Answer.where(post_id: params[:id]).order(:cached_votes_score => :desc).each do |answer| %>
       <br>
       <% @answer = Answer.find(answer) %>
       <h3><%= @answer.cached_votes_score %></h3>
       <%= link_to image_tag("rsz_thumbsdown.jpg"), dislike_answer_path(@answer), :method => :put %>
       <%= link_to image_tag("rsz_upvote.jpg"), like_answer_path(@answer), :method => :put %>
<pre>
<code class="language-markup-ruby">
       <p>
       <%= @answer.body %>
       </p>
</code>
</pre>
<% end %>

<%= render 'answers/form' %>

<div id= "answers">
	<h2> <%= @post.answers.count %> Answers</h2>

	<h3>Add an answer</h3>
	
</div>
