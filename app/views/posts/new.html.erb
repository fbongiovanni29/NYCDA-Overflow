<h1>New Question</h1>
<div class="texteditor">
<%= form_for :post, url: user_posts_path do |f| %>
 		<p>
 			<%= f.label :title %><br>
 			<%= f.text_field :title %>
 		</p>
		<div id="wmd-button-bar" class="wmd-panel"></div><br/>
 		<p>
 			<%= f.label :body %><br>
 			<%= f.text_area :body, size: "24x6", id: "wmd-input" %>
 		</p>
 		<div id="wmd-preview" class="wmd-panel"></div>
		<br/>
		<div id="wmd-output" class="wmd-panel"></div>
 		<p>
 			<%= f.submit %>
 		</p>
<% end %>
</div>

