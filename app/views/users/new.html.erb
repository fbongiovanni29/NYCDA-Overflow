<h1>Sign up</h1>

<%= form_for @user do |f| %>

	<p>
		<%= f.label :firstname %>
		<%= f.text_field :firstname %>
	</p>

	<p>
		<%= f.label :lastname %>
		<%= f.text_field :lastname %>
	</p>

	<p>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</p>


	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>
