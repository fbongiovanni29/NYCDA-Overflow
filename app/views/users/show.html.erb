<div id="info">
<p><%= image_tag @user.avatar.url(:medium) %></p>
<br>
<p>First Name: <%= @user.firstname %></p>
<br>
<p>Last Name: <%= @user.lastname %></p>
<br>
<p>Email: <%= @user.email %></p>
<br>

<%= link_to 'Edit Profile', edit_user_path %>

</div>




<% @posts.each do |postvar| %>
<h1><%= link_to postvar.title, user_post_path(postvar.id, @user.id) %></h1>
<pre>
<code class="language-markup-ruby">
<p><%= postvar.body %></p>
</code>
</pre>
<br>
<% end %>

